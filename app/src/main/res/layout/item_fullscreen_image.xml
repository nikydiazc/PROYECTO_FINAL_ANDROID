<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/degradado_azul">

    <!-- Imagen con zoom (PhotoView) ocupando toda la pantalla -->
    <com.github.chrisbanes.photoview.PhotoView
        android:id="@+id/fullScreenImageViewItem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="Imagen a pantalla completa"
        android:scaleType="fitCenter" />

    <!-- Loader centrado -->
    <ProgressBar
        android:id="@+id/progressBarImageItem"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:visibility="gone"
        android:indeterminate="true" />

</FrameLayout>
