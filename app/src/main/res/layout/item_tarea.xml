<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:background="@color/gris2">

        <!-- CONTENEDOR DE FOTOS (Antes / Después superpuestas) -->
        <FrameLayout
            android:id="@+id/layoutFotos"
            android:layout_width="120dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/imgTarea"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:src="@drawable/camera_icon" />

            <!-- Foto de respuesta / resultado -->
            <ImageView
                android:id="@+id/imgRespuesta"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/camera_icon"
                android:visibility="gone" />

        </FrameLayout>

        <!-- COLUMNA DERECHA: TEXTOS + BOTONES -->
        <LinearLayout
            android:id="@+id/layoutInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toTopOf="@id/layoutFotos"
            app:layout_constraintBottom_toBottomOf="@id/layoutFotos"
            app:layout_constraintStart_toEndOf="@id/layoutFotos"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tvDescripcionTarea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/cornertxtview2"
                android:padding="4dp"
                android:text="Descripción de la tarea"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvUbicacionTarea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/cornertxtview2"
                android:padding="4dp"
                android:text="Ubicación:"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvPisoValor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/cornertxtview2"
                android:padding="4dp"
                android:text="Piso 1"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvFechaCreacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/cornertxtview2"
                android:padding="4dp"
                android:text="Creada: 24/11/2025 12:20"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvFechaRespuesta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="@drawable/cornertxtview2"
                android:padding="4dp"
                android:text="Realizada: 25/11/2025 10:00"
                android:textSize="12sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvEstadoTarea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:padding="4dp"
                android:text="Estado: Pendiente"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvAsignadaA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/cornertxtview2"
                android:padding="4dp"
                android:text="Asignada a: —"
                android:textSize="13sp" />

            <!-- FILA DE BOTONES -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal"
                android:gravity="end">

                <Button
                    android:id="@+id/btnResponderFoto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Responder"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/verde" />

                <ImageButton
                    android:id="@+id/btnEditarTarea"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/cornertxtview2"
                    android:padding="4dp"
                    android:src="@drawable/ic_edit" />

                <ImageButton
                    android:id="@+id/btnEliminarTarea"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="4dp"
                    android:background="@drawable/cornertxtview2"
                    android:padding="4dp"
                    android:src="@drawable/ic_delete" />
            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
