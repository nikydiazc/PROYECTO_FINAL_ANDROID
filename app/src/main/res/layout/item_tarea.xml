<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_item_tarea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:background="@color/gris2">

        <!-- Foto principal -->
        <ImageView
            android:id="@+id/img_tarea"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/camera_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintWidth_percent="0.32"
            app:layout_constraintDimensionRatio="1:1.5" />

        <!-- Foto de respuesta (opcional) -->
        <ImageView
            android:id="@+id/img_respuesta"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="4dp"
            android:scaleType="centerCrop"
            android:src="@drawable/camera_icon"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@id/img_tarea"
            app:layout_constraintTop_toBottomOf="@id/img_tarea"
            app:layout_constraintWidth_percent="0.32"
            app:layout_constraintDimensionRatio="1:1.5" />

        <!-- Descripción -->
        <TextView
            android:id="@+id/tv_descripcion_tarea"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Descripción de la tarea"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/cornertxtview2"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/img_tarea"
            app:layout_constraintTop_toTopOf="@id/img_tarea"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Ubicación -->
        <TextView
            android:id="@+id/tv_ubicacion_tarea"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:text="Ubicación:"
            android:textSize="14sp"
            android:background="@drawable/cornertxtview2"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/img_tarea"
            app:layout_constraintTop_toBottomOf="@id/tv_descripcion_tarea"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Piso -->
        <TextView
            android:id="@+id/tv_piso_valor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:text="Piso 1"
            android:textSize="14sp"
            android:background="@drawable/cornertxtview2"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/img_tarea"
            app:layout_constraintTop_toBottomOf="@id/tv_ubicacion_tarea"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Fecha creación -->
        <TextView
            android:id="@+id/tv_fecha_creacion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:text="Creada: 17/11/2025 14:35"
            android:textSize="12sp"
            android:background="@drawable/cornertxtview2"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/img_tarea"
            app:layout_constraintTop_toBottomOf="@id/tv_piso_valor"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Fecha respuesta (opcional) -->
        <TextView
            android:id="@+id/tv_fecha_respuesta"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="2dp"
            android:text="Realizada: 18/11/2025 10:12"
            android:textSize="12sp"
            android:visibility="gone"
            android:background="@drawable/cornertxtview2"
            android:textColor="@color/white"
            app:layout_constraintStart_toEndOf="@id/img_tarea"
            app:layout_constraintTop_toBottomOf="@id/tv_fecha_creacion"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Estado -->
        <TextView
            android:id="@+id/tv_estado_tarea"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:text="Estado: Pendiente"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="14sp"
            android:background="@drawable/cornertxtview2"
            app:layout_constraintStart_toEndOf="@id/img_tarea"
            app:layout_constraintTop_toBottomOf="@id/tv_fecha_respuesta"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Asignada a -->
        <TextView
            android:id="@+id/tv_asignada_a"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:text="Asignada a: -"
            android:textSize="13sp"
            android:background="@drawable/cornertxtview2"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/img_tarea"
            app:layout_constraintTop_toBottomOf="@id/tv_estado_tarea"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Botones y acciones -->
        <Button
            android:id="@+id/btn_responder_foto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:text="Responder"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:backgroundTint="@color/verde"
            app:layout_constraintStart_toEndOf="@id/img_tarea"
            app:layout_constraintTop_toBottomOf="@id/tv_asignada_a"
            />

        <ImageButton
            android:id="@+id/btn_editar_tarea"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="8dp"
            android:padding="4dp"
            android:src="@drawable/ic_edit"
            android:background="@drawable/cornertxtview2"
            app:layout_constraintStart_toEndOf="@id/btn_responder_foto"
            app:layout_constraintTop_toTopOf="@id/btn_responder_foto"
            app:layout_constraintBottom_toBottomOf="@id/btn_responder_foto"/>

        <ImageButton
            android:id="@+id/btn_eliminar_tarea"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="4dp"
            android:padding="4dp"
            android:src="@drawable/ic_delete"
            android:background="@drawable/cornertxtview2"
            app:layout_constraintStart_toEndOf="@id/btn_editar_tarea"
            app:layout_constraintTop_toTopOf="@id/btn_responder_foto"
            app:layout_constraintBottom_toBottomOf="@id/btn_responder_foto"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>

