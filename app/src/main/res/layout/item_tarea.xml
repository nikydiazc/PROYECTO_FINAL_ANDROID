<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:background="@color/gris2">

        <LinearLayout
            android:id="@+id/layoutFotos"
            android:layout_width="130dp"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:weightSum="2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imgTarea"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/camera_icon" />

            <ImageView
                android:id="@+id/imgRespuesta"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/camera_icon"
                android:visibility="gone"
                />

        </LinearLayout>
        <TextView
            android:id="@+id/tvDescripcionTarea"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:gravity="center"
            android:background="@drawable/cornertxtview2"
            android:text="Descripción de la tarea"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/layoutFotos"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/layoutFotos" />

        <TextView
            android:id="@+id/tvUbicacionTarea"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:text="Ubicación:"
            android:textSize="14sp"
            android:gravity="center"
            android:background="@drawable/cornertxtview2"
            app:layout_constraintStart_toEndOf="@id/layoutFotos"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvDescripcionTarea" />

        <TextView
            android:id="@+id/tvPisoValor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:text="Piso 1"
            android:textSize="14sp"
            android:gravity="center"
            android:background="@drawable/cornertxtview2"
            app:layout_constraintStart_toEndOf="@id/layoutFotos"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvUbicacionTarea" />

        <TextView
            android:id="@+id/tvFechaCreacion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:text="Creada: 17/11/2025 14:35"
            android:textSize="12sp"
            android:gravity="center"
            android:background="@drawable/cornertxtview2"
            app:layout_constraintStart_toEndOf="@id/layoutFotos"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvPisoValor" />

        <TextView
            android:id="@+id/tvFechaRespuesta"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="2dp"
            android:text="Realizada: 18/11/2025 10:12"
            android:textSize="12sp"
            android:visibility="gone"
            android:background="@drawable/cornertxtview2"
            app:layout_constraintStart_toEndOf="@id/layoutFotos"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvFechaCreacion" />

        <TextView
            android:id="@+id/tvEstadoTarea"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:gravity="center"
            android:background="@drawable/cornertxtview2"
            android:text="Estado: Pendiente"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/layoutFotos"
            app:layout_constraintTop_toBottomOf="@id/tvFechaRespuesta" />

        <TextView
            android:id="@+id/tvAsignadaA"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:text="Asignada a: -"
            android:textSize="13sp"
            android:gravity="center"
            android:background="@drawable/cornertxtview2"
            app:layout_constraintStart_toEndOf="@id/layoutFotos"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvEstadoTarea" />

        <Button
            android:id="@+id/btnResponderFoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:text="Responder"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:backgroundTint="@color/verde"
            app:layout_constraintStart_toEndOf="@id/layoutFotos"
            app:layout_constraintTop_toBottomOf="@id/tvAsignadaA"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <ImageButton
            android:id="@+id/btnEditarTarea"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="8dp"
            android:padding="4dp"
            android:src="@drawable/ic_edit"
            android:background="@drawable/cornertxtview2"
            app:layout_constraintStart_toEndOf="@id/btnResponderFoto"
            app:layout_constraintTop_toTopOf="@id/btnResponderFoto"
            app:layout_constraintBottom_toBottomOf="@id/btnResponderFoto" />

        <ImageButton
            android:id="@+id/btnEliminarTarea"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="4dp"
            android:padding="4dp"
            android:src="@drawable/ic_delete"
            android:background="@drawable/cornertxtview2"
            app:layout_constraintStart_toEndOf="@id/btnEditarTarea"
            app:layout_constraintTop_toTopOf="@id/btnResponderFoto"
            app:layout_constraintBottom_toBottomOf="@id/btnResponderFoto"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>