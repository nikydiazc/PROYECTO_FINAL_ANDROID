<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp"
    android:background="@drawable/degradado_azul">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Foto ANTES -->
        <ImageView
            android:id="@+id/imgTarea"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:background="@color/white"
            android:scaleType="centerInside"
            android:src="@drawable/camera_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Foto DESPUÉS (solo en realizadas) -->
        <ImageView
            android:id="@+id/imgRespuesta"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_marginTop="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/camera_icon"
            android:background="@android:color/transparent"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imgTarea" />

        <!-- Descripción -->
        <TextView
            android:id="@+id/tvDescripcionTarea"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:gravity="center"
            android:text="Descripción de la tarea"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/imgTarea"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/imgTarea" />

        <!-- Ubicación -->
        <TextView
            android:id="@+id/tvUbicacionTarea"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:text="Ubicación:"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/imgTarea"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvDescripcionTarea" />

        <!-- Piso -->
        <TextView
            android:id="@+id/tvPisoValor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:text="Piso 1"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/imgTarea"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvUbicacionTarea" />

        <!-- Fecha creación -->
        <TextView
            android:id="@+id/tvFechaCreacion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:text="Creada: 17/11/2025 14:35"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@id/imgTarea"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvPisoValor" />

        <!-- Fecha respuesta (solo realizadas) -->
        <TextView
            android:id="@+id/tvFechaRespuesta"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="2dp"
            android:text="Realizada: 18/11/2025 10:12"
            android:textSize="12sp"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@id/imgTarea"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvFechaCreacion" />

        <!-- Estado -->
        <TextView
            android:id="@+id/tvEstadoTarea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:text="Estado: Pendiente"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/imgTarea"
            app:layout_constraintTop_toBottomOf="@id/tvFechaRespuesta" />

        <!-- Botón responder -->
        <Button
            android:id="@+id/btnResponderFoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:text="Responder"
            android:textSize="14sp"
            android:backgroundTint="@color/verde"
            app:layout_constraintStart_toEndOf="@id/imgTarea"
            app:layout_constraintTop_toBottomOf="@id/tvEstadoTarea"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
